/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f6f6f6;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 200rpx;
}

.upload-btn {
  width: 300rpx;
  height: 300rpx;
  background: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.upload-tip {
  margin-top: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.preview-area {
  width: 100%;
}

.preview-image {
  width: 100%;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.action-btn {
  flex: 1;
  margin: 0 10rpx;
  background: #ff4c4c;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.share-btn {
  background: #07c160;
}

.preview-container {
  position: relative;
  width: 100%;
}
